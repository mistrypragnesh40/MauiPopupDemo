<?xml version="1.0" encoding="utf-8" ?>
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
             x:Class="MauiPopupDemo.PopupPage1"
             Title="PopupPage1">
    <VerticalStackLayout Padding="10" Spacing="10">
        <Image Source="dotnet_bot.png" HeightRequest="100" />
        <Label Text="Hello World" FontSize="32" />


        <Button Text="Click Here To Close" x:Name="btnYes" Grid.Column="0"  Clicked="btnYes_Clicked" />
      
    </VerticalStackLayout>
</mauiPopup:BasePopupPage>